@model CMCSPOE.Models.User;
@{
	ViewData["BodyClass"] = "login-page"; 
	ViewData["Title"] = "Login";
}

<h2>Login</h2>
<hr />

<div class="d-flex justify-content-center">
    <div class="login-card">
        <form asp-action="Login" method="post" class="login-form">
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PasswordHash" class="form-label"></label>
                <input asp-for="PasswordHash" class="form-control" type="password" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login w-100">Login</button>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger mt-3">@ViewBag.Message</div>
            }
        </form>

        <div class="text-center mt-3 register-note">
            <p>Don't have an account? 
                <a asp-controller="Account" asp-action="Registration">Register here</a>
            </p>
        </div>
    </div>
</div>
