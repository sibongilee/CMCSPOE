@model CMCSPOE.Models.User
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center">
    <div class="login-card" role="region" aria-labelledby="register-title">
        <h1 id="register-title" class="mb-1">Create an account</h1>
        <p class="form-hint">Fill in the details to register</p>

        <form asp-action="Registration" method="post" class="login-form" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger error-message sr-only"></div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full name</label>
                <input asp-for="FullName" class="form-control" autocomplete="name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PasswordHash" class="form-label">Password</label>
                <div class="input-group">
                    <input asp-for="PasswordHash" class="form-control with-toggle" type="password" autocomplete="new-password" />
                    <button type="button" class="password-toggle" aria-label="Show password" title="Show password">Show</button>
                </div>
                <div class="form-hint">Use 8+ characters, including a number.</div>
                <span asp-validation-for="PasswordHash" class="text-danger mt-1"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label">Role</label>
                <select asp-for="Role" class="form-select" aria-label="Select role">
                    <option value="">-- Select Role --</option>
                    <option value="Lecturer">Lecturer</option>
                    <option value="Programme Coordinator">Programme Coordinator</option>
                    <option value="Academic Manager">Academic Manager</option>
                    <option value="HR">HR</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login w-100" aria-label="Register">Register</button>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info mt-3" role="status">@ViewBag.Message</div>
            }
        </form>

        <div class="text-center mt-3 register-note">
            <p class="mb-0">Already have an account?
                <a asp-controller="Account" asp-action="Login">Login here</a>
            </p>
        </div>
    </div>
</div>


