@model CMCSPOE.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
	
}
<div class="card bg-secondary text-white shadow">
    <div class="card-header fw-bold">Submit Monthly Claim</div>
    <div class="card-body">

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <form asp-action="SubmitClaim" method="post">

            <div class="mb-3">
                <label class="form-label">Lecturer ID</label>
                <input asp-for="LecturerId" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Hours Worked</label>
                <input asp-for="HoursWorked" type="number" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Hourly Rate (R)</label>
                <input asp-for="HourlyRate" step="0.01" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Additional Notes</label>
                <textarea asp-for="Notes" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-light w-100 fw-bold">Submit Claim</button>
        </form>
    </div>
</div>
<script>
	const hours = document.getElementById("HoursWorked");
	const rate = document.getElementById("HourlyRate");
	const total = document.getElementById("TotalAmount");

    function calculate(){
		let hrs = parseFloat(hours.value) || 0;
		let rt = parseFloat(rate.value) || 0;
		total.value = (hrs * rt).toFixed(2);
	}
	hours.addEventListener("input", calculate);
	rate.addEventListener("input", calculate);
</script>