@{
    ViewData["Title"] = "Upload Document";
}
<div class="dashboard-wrapper">
    <h2>Upload Supporting Document</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form method="post" enctype="multipart/form-data" asp-action="UploadDocuments" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" name="claimId" value="@ViewBag.ClaimId" />

        <div class="mb-3">
            <label class="form-label">Select File (.pdf, .docx, .xlsx)</label>
            <input type="file" name="document" class="form-control" required />
        </div>

        <button class="btn btn-primary w-100">Upload</button>
    </form>
</div>