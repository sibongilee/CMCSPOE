@model List<CMCSPOE.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<h3 class="text-white fw-bold mb-3">My Submitted Claims</h3>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-dark table-striped table-bordered shadow">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Status</th>
            <th>Document</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.ClaimId</td>
                <td>@claim.HoursWorked</td>
                <td>R @claim.HourlyRate</td>
                <td>
                    <span class="badge bg-info">@claim.Status</span>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.DocumentPath))
                    {
                        <a href="~/uploads/@claim.DocumentPath" class="btn btn-sm btn-outline-light">View File</a>
                    }
                </td>
                <td>
                    <a asp-action="UploadDocuments" asp-route-id="@claim.ClaimId" class="btn btn-sm btn-light">Upload Document</a>
                </td>
            </tr>
        }
    </tbody>
</table>
