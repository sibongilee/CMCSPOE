@model List<CMCSPOE.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="dashboard-wrapper">
    <h2>My Claims</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">You have not submitted any claims yet.</div>
    }
    else
    {
        <div class="row">
            @foreach (var c in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="dashboard-card">
                        <h3>Claim #@c.ClaimId</h3>
                        <p><strong>Submitted:</strong> @(c.DateSubmitted == DateTime.MinValue ? "-" : c.DateSubmitted.ToString("g"))</p>
                        <p><strong>Hours:</strong> @c.HoursWorked</p>
                        <p><strong>Total:</strong> @c.TotalAmount.ToString("C")</p>
                        <p><strong>Status:</strong> @c.Status</p>
                        <div class="mt-2 d-grid gap-2">
                            <a class="btn btn-primary" asp-action="UploadDocuments" asp-route-id="@c.ClaimId">Upload / Replace Document</a>
                            @if (!string.IsNullOrEmpty(c.DocumentPath))
                            {
                                <a class="btn btn-secondary" target="_blank" href="~/uploads/@c.DocumentPath">View Document</a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
