    <h2 class="text-info">Lecturer Dashboard</h2>

    <div class="mt-4">
        <a class="btn btn-info w-100 mb-3" asp-controller="Claim" asp-action="SubmitClaim">
            ➤ Submit Claim
        </a>

        <a class="btn btn-secondary w-100 mb-3" asp-controller="Claim" asp-action="ViewClaims">
            ➤ View My Claims
        </a>

        <a class="btn btn-light w-100" asp-controller="Claim" asp-action="UploadDocuments">
            ➤ Upload Supporting Documents
        </a>
    </div>
</div>
	

