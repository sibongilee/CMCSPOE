@model IEnumerable<CMCSPOE.Models.Claim>
@{
    Layout = "_Layout";
}

<h2 class="text-center text-primary mb-4">Coordinator / Manager Dashboard</h2>

<div class="row mb-4 text-center">
    <div class="col-md-3">
        <div class="card bg-light shadow-sm p-3">
            <h5>Total Claims</h5>
            <h3>@Model.Count()</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark shadow-sm p-3">
            <h5>Pending</h5>
            <h3>@ViewBag.Pending</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white shadow-sm p-3">
            <h5>Approved</h5>
            <h3>@ViewBag.Approved</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white shadow-sm p-3">
            <h5>Rejected</h5>
            <h3>@ViewBag.Rejected</h3>
        </div>
    </div>
</div>

<h4 class="text-secondary">Recent Claims</h4>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Hours</th>
            <th>Total</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Take(10))
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.Month</td>
                <td>@claim.HoursWorked</td>
                <td>R @(claim.HoursWorked* claim.TotalAmount)</td>
                <td>@claim.Status</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-end mt-3">
    <a asp-controller="Claim" asp-action="VerifyClaims" class="btn btn-primary">Go to Claim Verification</a>
</div>


	

