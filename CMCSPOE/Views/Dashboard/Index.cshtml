@model CMCSPOE.Models.User;
@{
	ViewData["Title"] = "Dashboard";
	var userRole = TempData["user_Role"]?.ToString();
	var userName = TempData["user_Name"]?.ToString();
}

<div class="dashboard-container">
    <div class="dashboard-wrapper">
        <h1 class="dashboard-title">Welcome to the Dashboard</h1>
        <p class="dashboard-subtitle">
            Quick access to common tasks. Tap a card to open the panel or use the action buttons.
        </p>

        <div class="dashboard-grid" role="list">

            <!-- Lecturer panel -->
            <div class="dashboard-card" role="listitem" aria-labelledby="lecturer-title">
                <div>
                    <h3 id="lecturer-title">Lecturer Panel</h3>
                    <p>View and manage lecturer profiles, departments and assignments.</p>
                </div>
                <div class="card-actions">
                    <a asp-controller="Lecturer" asp-action="Index" class="btn btn-primary"
                        title="Open Lecturer Panel">Open Panel</a>
                    <a asp-controller="Lecturer" asp-action="Create" class="btn btn-outline"
                        title="Add New Lecturer">Add Lecturer</a>
                </div>
            </div>

            <!-- Claims: submit / view -->
            <div class="dashboard-card" role="listitem" aria-labelledby="claims-title">
                <div>
                    <h3 id="claims-title">Claims</h3>
                    <p>Submit new claims and review existing claim status and approvals.</p>
                </div>
                <div class="card-actions">
                    <a asp-controller="Claim" asp-action="SubmitClaim" class="btn btn-primary"
                        title="Submit a new claim">Submit Claim</a>
                    <a asp-controller="Claim" asp-action="ViewClaims" class="btn btn-outline"
                        title="View submitted claims">View Claims</a>
                </div>
            </div>

            <!-- Documents: upload / view -->
            <div class="dashboard-card" role="listitem" aria-labelledby="docs-title">
                <div>
                    <h3 id="docs-title">Documents</h3>
                    <p>Upload supporting documents to claims and manage uploaded files.</p>
                </div>
                <div class="card-actions">
                    <a asp-controller="Claim" asp-action="UploadDocuments" class="btn btn-primary"
                        title="Upload a document">Upload Document</a>
                    <a asp-controller="Claim" asp-action="VerifyClaims" class="btn btn-outline"
                        title="Verify uploaded documents">Verify Documents</a>
                </div>
            </div>

            <!-- HR Reports card -->
            @if (userRole == "HR")
            {
                <div class="dashboard-card" role="listitem" aria-labelledby="reports-title">
                    <div>
                        <h3 id="reports-title">HR Reports</h3>
                        <p>Generate HR payout reports and export approved claim summaries.</p>
                    </div>
                    <div class="card-actions">
                        <a asp-controller="Hr" asp-action="Index" class="btn btn-primary"
                            title="Open HR Reports">Open Reports</a>
                        <a asp-controller="Hr" asp-action="Download" class="btn btn-outline"
                            title="Download report">Download</a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

