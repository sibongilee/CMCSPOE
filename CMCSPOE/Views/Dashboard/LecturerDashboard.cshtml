@model IEnumerable<CMCSPOE.Models.Claim>
@{
	ViewData["Title"] = "Lecturer Dashboard";
}

<h2 class="text-center text-primary mb-4">Lecturer Dashboard</h2>

<div class="row mb-4 text-center">
    <div class="col-md-3">
        <div class="card bg-light shadow-sm p-3">
            <h5>Total Claims</h5>
            <h3>@ViewBag.TotalClaims</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-dark shadow-sm p-3">
            <h5>Pending</h5>
            <h3>@ViewBag.Pending</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white shadow-sm p-3">
            <h5>Approved</h5>
            <h3>@ViewBag.Approved</h3>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white shadow-sm p-3">
            <h5>Rejected</h5>
            <h3>@ViewBag.Rejected</h3>
        </div>
    </div>
</div>

<div class="text-end mb-3">
    <a asp-controller="Claim" asp-action="SubmitClaim" class="btn btn-primary">Submit New Claim</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Month</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Total</th>
            <th>Status</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Month</td>
                <td>@claim.HoursWorked</td>
                <td>R @claim.TotalAmount</td>
                <td>R @(claim.HoursWorked* claim.TotalAmount)</td>
                <td>@claim.Status</td>
                <td>@claim.Notes</td>
            </tr>
        }
    </tbody>
</table>