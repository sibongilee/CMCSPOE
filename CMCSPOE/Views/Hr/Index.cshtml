@model List<CMCSPOE.Models.HrReport>
@{
    ViewData["Title"] = "HR Reports";
}
<h2 class="mb-4">HR Approved Claims Summary</h2>

<div class="mb-3">
    <a class="btn btn-primary" asp-controller="Hr" asp-action="DownloadReport">Download CSV Report</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th class="text-end">Hours Worked</th>
            <th class="text-end">Hourly Rate</th>
            <th class="text-end">Total Amount</th>
            <th>Approved On</th>
            <th>Approved By</th>
            <th>Comments</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var report in Model)
            {
                <tr>
                    <td>@report.ClaimId</td>
                    <td>@report.LecturerName</td>
                    <td class="text-end">@report.HoursWorked</td>
                    <td class="text-end">@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", report.HourlyRate)</td>
                    <td class="text-end">@String.Format(System.Globalization.CultureInfo.CurrentCulture, "{0:C}", report.TotalAmount)</td>
                    <td>@(report.ApprovedDate?.ToString("yyyy-MM-dd") ?? "-")</td>
                    <td>@(report.ApprovedBy ?? "-")</td>
                    <td>@(report.Comments ?? "-")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center text-muted">No approved claims found.</td>
            </tr>
        }
    </tbody>
</table>
