@{
    ViewData["Title"] = "Add Lecturer";
}
<div class="container col-md-6 mt-4 bg-dark p-4 rounded shadow">
    <h3 class="text-info mb-3">Add Lecturer</h3>

    <form method="post" asp-action="Create">
        <div class="mb-3">
            <label>Full Name</label>
            <input type="text" name="FullName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>Department</label>
            <input type="text" name="Department" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>Hourly Rate</label>
            <input type="number" step="0.01" name="HourlyRate" class="form-control" required />
        </div>

        <button class="btn btn-info w-100">Create Lecturer</button>
    </form>
</div>