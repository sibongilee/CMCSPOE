@{
	var userRole = TempData["user_Role"]?.ToString();
	var userName = TempData["user_Name"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CMCSPOE</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CMCSPOE.styles.css" asp-append-version="true" />
</head>
<body>
	<!-- NAVIGATION BAR -->
	<nav class="navbar navbar-expand-lg navbar-custom">
		<div class="container-fluid">
			<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CMCSPOE</a>

			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
				<span class="navbar-toggler-icon" style="filter: invert(1);"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarNav">

				<!-- LEFT LINKS -->
				<ul class="navbar-nav me-auto">

					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="About">About</a>
					</li>

					<li class="nav-item">
						<a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
					</li>
					
				</ul>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse"
						data-bs-target="#navbarNav" aria-controls="navbarNav"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">

						@if (TempData["userName"] != null)
						{
							<li class="nav-item">
								<span class="navbar-text text-white me-3">
									@TempData["userName"]
									(@TempData["userRole"])
								</span>
							</li>
						}

						@if (userRole == "Lecturer")
						{
							<li class="nav-item">
								<a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-controller="Claim" asp-action="SubmitClaim">Submit Claim</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-controller="Claim" asp-action="UploadDocuments">Upload Supporting documents</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-controller="Claim" asp-action="ViewClaims">View My Claims</a>
							</li>
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="lecturerPanel" role="button" data-bs-toggle="dropdown">Lecturer Panel</a>
								<ul class="dropdown-menu bg-dark">
									<li>
										<a class="dropdown-item text-white" asp-controller="Lecturer" asp-action="Create">Create Lecturer</a>
									</li>
									<li>
										<a class="dropdown-item text-white" asp-controller="Lecturer" asp-action="LecturerList">Lecturer List</a>
									</li>
								</ul>
							</li>
						}
						@if (userRole == "Programme Coordinator")
						{
							<li class="nav-item">
								<a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-controller="Claim" asp-action="VerifyClaims">Verify Claims</a>
							</li>
						}
						@if (userRole == "Academic Manager")
						{
							<div class="col-md-4 mb-3">
								<a class="dashboard-card" asp-controller="Claim" asp-action="ApproveClaims">Approve Claims</a>
							</div>
							<div class="col-md-4 mb-3">
								<a class="dashboard-card" asp-controller="Claim" asp-action="ApproveClaims">Approve Claims</a>
							</div>
						}
					</ul>
				</div>
				
				<!-- RIGHT SIDE (Login status) -->
				<ul class="navbar-nav">
					@if (TempData["Username"] != null)
					{
						<li class="nav-item">
							<span class="nav-link username-display">Welcome, @TempData["Username"]</span>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
						</li>
					}
					else
					{
						<li class="nav-item">
							<a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-controller="Account" asp-action="Registration">Register</a>
						</li>
					}
				</ul>
			</div>
		</div>
	</nav>


	<div class="container mt-4">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="text-center mt-5 mb-3">
		<div class="container">
			<span class="text-white">&copy;@DateTime.Now.Year - CMCSPOE System</span>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
