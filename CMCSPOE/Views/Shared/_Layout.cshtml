@{
    var userRole = TempData["userRole"]?.ToString();
    var userName = TempData["userName"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCSPOE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CMCSPOE.styles.css" asp-append-version="true" />
</head>
<body>
    
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">CMCS System</a>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Lecturer Panel</a>
                </li>
            </ul>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  
                    @if (TempData["userName"] != null)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">
                                @TempData["userName"]
                                (@TempData["userRole"])
                            </span>
                        </li>
                    }
                        
                    @if (userRole == "Lecturer")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claim" asp-action="SubmitClaim">Submit Claim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claim" asp-action="UploadDocuments">Upload Supporting documents</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claim" asp-action="ViewClaims">View My Claims</a>
                        </li>

                    }
                    else if (userRole == "Programme Coordinator")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claim" asp-action="VerifyClaims">Verify Claims</a>
                        </li>
                    }
                    else if (userRole == "Academic Manager")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Claim" asp-action="ApproveClaims">Approve Claims</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <li class="nav-item">
                            <span class="nav-link text-light">Welcome, @userName!</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-warning" asp-controller="Account" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Registration">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CMCSPOE - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
